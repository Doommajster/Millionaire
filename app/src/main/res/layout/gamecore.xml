<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/button1"
        android:layout_width="183dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/standartbutton"
        android:text="(a)"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="183dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/standartbutton"
        android:text="(b)"
        android:textColor="#fff"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="183dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/standartbutton"
        android:text="(c)"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="183dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/standartbutton"
        android:text="(d)"
        android:textColor="#fff"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/time"
        android:layout_width="107dp"
        android:layout_height="51dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="280dp"
        android:textColor="#fff"
        android:textSize="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="390dp"
        android:layout_height="144dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/sqlradek"
        android:gravity="center"
        android:text="OtÃ¡zkadfasdfasffadsfdasfdafdasfdsfasfdsfdfdafadsfasdfdafsdfsdf"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="251dp"
        android:layout_height="228dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/logo_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/padesatnapadesat"
        android:layout_width="79dp"
        android:layout_height="68dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/fiftyfifty"
        app:layout_constraintStart_toEndOf="@+id/time"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/publikum"
        android:layout_width="79dp"
        android:layout_height="65dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/publikum"
        app:layout_constraintStart_toEndOf="@+id/padesatnapadesat"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/telefon"
        android:layout_width="79dp"
        android:layout_height="67dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/telefon"
        app:layout_constraintStart_toEndOf="@+id/publikum"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</android.support.constraint.ConstraintLayout>